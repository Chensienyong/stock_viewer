<div class="container">
  <div class="row header">
    <div class="col-sm-12">
      <%= link_to image_tag("stock_viewer.png"), root_path %>
    </div>
  </div>
  <div class="row">
    <%
      require 'date'

      def candlestick_data
        @daily_series.map {|i| [i['date'].to_date, ohlc(i)] }.to_h
      end

      def ohlc(curr)
        open = curr['open']
        high = curr['high']
        low = curr['low']
        close = curr['close']
        [open, high, low, close]
      end

      candlestick_options = {
          plot_options: {
              candlestick: {
                  colors: {
                      upward: '#1de051',
                      downward: '#e03a1d'
                  }
              }
          }
      }
    %>

    <%= candlestick_chart(candlestick_data, candlestick_options) %>
  </div>
</div>
